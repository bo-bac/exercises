@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User?.Identity?.IsAuthenticated ?? false)
{
    <li class="nav-item">
        <a  class="nav-link text-dark">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Google" asp-action="Logout")">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Google" asp-action="Login">Login</a>
    </li>
}
</ul>
